{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - gradually increasing strictness */
    "strict": true,
    "noImplicitAny": false, /* We'll enable this later */
    "strictNullChecks": true,
    "noUnusedLocals": false, /* We'll enable this later */
    "noUnusedParameters": false, /* We'll enable this later */
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}